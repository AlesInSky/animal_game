<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/colorSurface"
    android:layout_marginTop="30dp"


    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MyCustomTheme"
        android:padding="12dp">

        <TextView
            android:id="@+id/numberChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="1"
            app:layout_constraintBottom_toBottomOf="@id/descriptionChapter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/titleChapter" />

        <TextView
            android:id="@+id/titleChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Title change"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/numberChapter"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/descriptionChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Description change"
            app:layout_constraintEnd_toEndOf="@id/titleChapter"
            app:layout_constraintStart_toStartOf="@id/titleChapter"
            app:layout_constraintTop_toBottomOf="@id/titleChapter" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>